<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="path.logs">${sys:java.io.tmpdir}</Property>
    </Properties>
    
    <Appenders>
        <!-- Archivo principal -->
        <RollingFile name="ROOT_REST_EE" 
                     fileName="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}escritorioempresa.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}sdm.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <ThresholdFilter level="DEBUG" />
            <PatternLayout pattern="%d{dd/MM/yyyy}; %d{HH:mm:ss}; %p; (%t) %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>

        <!-- DEBUG -->
        <RollingFile name="DEBUG_REST_EE" 
                     fileName="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}debug.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}debug.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <ThresholdFilter level="DEBUG" />
            <PatternLayout pattern="%d{dd/MM/yyyy}; %d{HH:mm:ss}; %p; {%C->%M} %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>
        
        <!-- ERROR -->
        <RollingFile name="ERROR_REST_EE" 
                     fileName="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}error.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}error.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <ThresholdFilter level="ERROR" />
            <PatternLayout pattern="[%d{dd/MM/yyyy HH:mm:ss,SSS}] {%C->%M} %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>

        <!-- INFO -->
        <RollingFile name="INFO_REST_EE" 
                     fileName="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}info.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}info.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{dd/MM/yyyy}; %d{HH:mm:ss}; %p; %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>
        
        <!-- CXF -->
        <RollingFile name="CXF_REST_EE" 
                     fileName="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}cxf.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}sdm${sys:file.separator}ws${sys:file.separator}cxf.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <PatternLayout pattern="%d{dd/MM/yyyy}; %d{HH:mm:ss}; %p; %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="cl.sdm" additivity="false">
            <AppenderRef ref="INFO_REST_EE" level="info" />
            <AppenderRef ref="ERROR_REST_EE" level="error" />
            <AppenderRef ref="DEBUG_REST_EE" level="debug" />
        </Logger>

        <Logger name="org.apache.cxf" level="INFO" additivity="false">
            <AppenderRef ref="CXF_REST_EE" />
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="ROOT_REST_EE"/>
        </Root>
    </Loggers>
</Configuration>